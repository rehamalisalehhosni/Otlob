<p id="notice"><%= notice %></p>

<h1>Listing Invited Friends</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invited_friends.each do |invited_friend| %>
      <tr>
        <td><%= invited_friend.status %></td>
        <td><%= link_to 'Show', invited_friend %></td>
        <td><%= link_to 'Edit', edit_invited_friend_path(invited_friend) %></td>
        <td><%= link_to 'Destroy', invited_friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

